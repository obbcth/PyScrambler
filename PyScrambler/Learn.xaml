<Page x:Class="PyScrambler.Learn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PyScrambler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Learn">

    <Grid>
        <StackPanel x:Name="Sub">
        </StackPanel>
        <StackPanel x:Name="Tool" VerticalAlignment="Bottom">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Margin="20,0,0,20" x:Name="Remain" VerticalAlignment="Bottom" FontFamily="./Fonts/#SeoulNamsan"/>
                <Button Grid.Column="4" Grid.Row="0" Content="      Home      " x:Name="Home" Click="Home_Click" Margin="20,10,20,20" Padding="30, 10, 30, 10" FontSize="16" HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
    </Grid>
    
</Page>
